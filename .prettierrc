{
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": false,
  "printWidth": 120,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
      {
          "files": ["*.ts"],
          "options": {
              "parser": "typescript"
          }
      },
      {
          "files": ["*.tsx"],
          "options": {
              "parser": "typescript",
              "jsxBracketSameLine": false,
              "jsxSingleQuote": false
          }
      },
      {
          "files": ["*.scss"],
          "options": {
              "parser": "scss"
          }
      },
      {
          "files": ["*.json"],
          "options": {
              "parser": "json"
          }
      }
  ]
}
